@foreach (var item in Model.LessonPostList)
{
    <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-4 col-sm-6 mb-4">
        <a class="card style-6" asp-controller="Lesson" asp-action="PostDetails" asp-route-id="@item.Id">

            <img src="~/src/assets/img/lessonPosts.jpg" class="card-img-top" alt="...">
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 mb-4">
                        <b>@item.Caption</b>
                    </div>

                </div>
            </div>
        </a>
    </div>
}